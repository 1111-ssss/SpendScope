<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:admin.Features.Common.Controls"
    xmlns:convert="clr-namespace:admin.Features.Common.Converters"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    >
    <Style TargetType="{x:Type local:DashboardCard}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Width" Value="280"/>
        <Setter Property="Height" Value="180"/>
        <Setter Property="AccentBrush" Value="{DynamicResource SystemAccentColorSecondaryBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:DashboardCard}">
                    <Border 
                        Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource CardBorderBrush}"
                        BorderThickness="1"
                        Padding="16"
                        CornerRadius="10"
                        >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock 
                                    Grid.Row="0"
                                    Text="{TemplateBinding Title}"
                                    FontSize="18"
                                    FontWeight="Normal"
                                    Margin="0,0,0,10"
                                    Visibility="{TemplateBinding Title, Converter={StaticResource NullToVisibilityConverter}}"
                                />

                                <ContentPresenter 
                                    Grid.Row="1"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Content="{TemplateBinding Content}"
                                    Margin="5"
                                    Visibility="{TemplateBinding Content, Converter={StaticResource NullToVisibilityConverter}}"
                                />

                                <TextBlock 
                                    Grid.Row="2"
                                    Text="{TemplateBinding SubText}"
                                    TextWrapping="Wrap"
                                    FontSize="12"
                                    Opacity="0.7"
                                    Margin="0,10,0,0"
                                    VerticalAlignment="Bottom"
                                    Visibility="{TemplateBinding SubText, Converter={StaticResource NullToVisibilityConverter}}"
                                />
                            </Grid>

                            <Border 
                                Grid.Column="1"
                                BorderBrush="{TemplateBinding AccentBrush}"
                                BorderThickness="1"
                                Margin="8"
                                VerticalAlignment="Top"
                                CornerRadius="10"
                                Padding="4"
                                Visibility="{TemplateBinding Icon, Converter={StaticResource NullToVisibilityConverter}}"
                                >
                                <ui:SymbolIcon 
                                    Symbol="{TemplateBinding Icon}"
                                    FontSize="32"
                                    Foreground="{TemplateBinding AccentBrush}"
                                />
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>