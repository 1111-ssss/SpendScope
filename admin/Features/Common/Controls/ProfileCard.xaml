<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:admin.Features.Common.Controls"
    xmlns:convert="clr-namespace:admin.Features.Common.Converters"
    >
    <Style TargetType="{x:Type local:ProfileCard}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ProfileCard}">
                    <Border 
                        Grid.Column="1"
                        BorderThickness="1"
                        Margin="8"
                        VerticalAlignment="Top"
                        CornerRadius="10"
                        Padding="5"
                        >
                        <StackPanel>
                            <Ellipse
                                Width="200"
                                Height="200"
                                Margin="10,30,10,10"
                                >
                                <Ellipse.Fill>
                                    <ImageBrush
                                        ImageSource="{TemplateBinding Avatar}"
                                        Stretch="UniformToFill"
                                    />
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock
                                Text="{TemplateBinding DisplayName}"
                                FontWeight="SemiBold"
                                FontSize="22"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,5"
                            />
                            <TextBlock
                                Text="{TemplateBinding Username}"
                                FontSize="14"
                                Visibility="{Binding Username, Converter={StaticResource NullToVisibilityConverter}}"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,5"
                            />
                            <TextBlock
                                Text="{TemplateBinding UserRole}"
                                FontSize="14"
                                Visibility="{Binding UserRole, Converter={StaticResource NullToVisibilityConverter}}"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,10"
                            />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>