<Page x:Class="admin.Features.Users.UsersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:admin.Features.Users"
    xmlns:controls="clr-namespace:admin.Features.Common.Controls"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    mc:Ignorable="d" 
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <controls:ProfileCard
            Grid.Column="0"
            Avatar="{Binding UserAvatar}"
            DisplayName="{Binding UserDisplayName}"
            Username="{Binding Username}"
            UserRole="{Binding UserRole}"
        />
        <StackPanel
            Grid.Column="1"
            >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <hc:TextBox 
                    Grid.Column="0"
                    hc:InfoElement.Placeholder="Введите имя пользователя"
                    hc:InfoElement.Title="Поиск пользователей"
                    hc:InfoElement.Necessary="True"
                    Margin="0,16,0,0"
                    Text="{Binding SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
                <Button
                    Grid.Column="1"
                    Content="Найти"
                    Command="{Binding SearchCommand}"
                    Margin="8,16,0,0"
                    MinWidth="100"
                />
            </Grid>
            <hc:Pagination
                PageIndex="{Binding CurrentPage}"
                MaxPageCount="{Binding TotalPages}"
                >
                <hc:Interaction.Triggers>
                    <hc:EventTrigger EventName="PageUpdated">
                        <hc:EventToCommand Command="{Binding PageUpdatedCommand}" PassEventArgsToCommand="True" />
                    </hc:EventTrigger>
                </hc:Interaction.Triggers>
            </hc:Pagination>
            <DataGrid
                Grid.Column="1"
                Margin="10,10,10,10"
                HorizontalAlignment="Stretch"
                HeadersVisibility="All"
                RowHeaderWidth="60"
                AutoGenerateColumns="False"
                hc:DataGridAttach.ShowRowNumber="True"
                >
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="60" CanUserResize="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image
                                    Source="{Binding Avatar}"
                                    MaxWidth="32"
                                    MaxHeight="32"
                                    Stretch="Uniform"
                                />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Binding="{Binding Username}"
                        CanUserResize="False"
                        Header="Никнейм"
                    />
                    <DataGridTextColumn
                        Binding="{Binding DisplayName}"
                        CanUserResize="False"
                        Header="Отображаемое имя"
                    />
                    <DataGridTextColumn
                        Binding="{Binding LastOnline}"
                        CanUserResize="False"
                        Header="Онлайн"
                    />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
