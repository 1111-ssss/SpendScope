<Page x:Class="admin.Features.Users.UsersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:admin.Features.Users"
    xmlns:controls="clr-namespace:admin.Features.Common.Controls"
    mc:Ignorable="d" 
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <controls:ProfileCard
            Avatar="{Binding UserAvatar}"
            DisplayName="{Binding UserDisplayName}"
            Username="{Binding Username}"
            UserRole="{Binding UserRole}"
        />
        <StackPanel
            Grid.Column="1"
            Margin="10,10,10,10"
            HorizontalAlignment="Stretch"
            >
            <TextBlock
                Text="Личные данные"
                FontSize="28"
                FontWeight="SemiBold"
                Foreground="{DynamicResource AccentTextFillColorSecondaryBrush}"
                TextWrapping="WrapWithOverflow"
                Margin="5,5,5,10"
            />
            <WrapPanel>

            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
