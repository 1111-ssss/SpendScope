<Page x:Class="admin.Features.Auth.Pages.AuthSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:admin.Features.Auth.Pages"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    >
    <ui:Card
        Margin="40"
        MaxWidth="560"
        >
        <StackPanel>
            <TextBlock 
                Text="Настройки авторизации"
                FontSize="24"
                FontWeight="SemiBold"
                Margin="0,0,0,32"
            />

            <Label
                Content="Адрес удаленного сревера"
            />
            <ui:TextBox 
                PlaceholderText="https://..."
                Text="{Binding Settings.ServerBaseURI, Mode=TwoWay}"
                Icon="{ui:SymbolIcon Symbol=Link24}"
                Margin="0,0,0,16"
            />

            <ui:ToggleSwitch 
                Content="Запоминать логин"
                IsChecked="{Binding Settings.RememberUsername, Mode=TwoWay}"
                Margin="0,0,0,16"
            />

            <Label
                Content="Тема приложения"
            />
            <ComboBox
                ItemsSource="{Binding Settings.Themes}"
                Margin="0,0,0,24"
                HorizontalAlignment="Stretch"
                SelectedItem="{Binding Settings.CurrentTheme, Mode=TwoWay}"
            />

            <ui:Button 
                Content="Назад ко входу"
                Appearance="Primary"
                Command="{Binding ChangeSettingsCommand}"
                HorizontalAlignment="Stretch"
                Height="48"
                FontSize="16"
            />
        </StackPanel>
    </ui:Card>
</Page>
