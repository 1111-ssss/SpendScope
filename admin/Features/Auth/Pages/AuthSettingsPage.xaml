<Page x:Class="admin.Features.Auth.Pages.AuthSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:admin.Features.Auth.Pages"
    >
    <StackPanel Margin="40" MaxWidth="460" VerticalAlignment="Center">
        <TextBlock Text="Настройки авторизации" FontSize="28" FontWeight="SemiBold" Margin="0,0,0,32"/>

        <ui:TextBox PlaceholderText="Адрес удаленного сервера (https://...)"
                    Text="{Binding ServerUrl, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,24"/>

        <ui:ToggleSwitch Content="Запоминать логин и email"
                         IsChecked="{Binding RememberCredentials}"
                         Margin="0,0,0,32"/>

        <ui:Button Content="Сохранить и вернуться"
                   Appearance="Primary"
                   Command="{Binding SaveAndReturnCommand}"
                   HorizontalAlignment="Stretch"
                   Height="48"
                   FontSize="16"/>

        <ui:HyperlinkButton Content="← Назад ко входу"
                            Command="{Binding NavigateToLoginCommand}"
                            HorizontalAlignment="Center"
                            Margin="0,24,0,0"/>
    </StackPanel>
</Page>
