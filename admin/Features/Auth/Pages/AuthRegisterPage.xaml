<Page x:Class="admin.Features.Auth.Pages.AuthRegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:admin.Features.Auth.Pages"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    >
    <StackPanel
        Margin="40"
        MaxWidth="460"
        VerticalAlignment="Center"
        >

        <TextBlock
            Text="Регистрация"
            FontSize="28"
            FontWeight="SemiBold"
            Margin="0,0,0,32"
        />

        <Label
            Content="Имя пользователя"
        />
        <ui:TextBox
            PlaceholderText="Введите логин"
            Text="{Binding Identifier, Mode=TwoWay}"
            Margin="0,0,0,16"
        />

        <Label
            Content="Адрес электронной почты"
        />
        <ui:TextBox 
            PlaceholderText="Введите email"
            Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Margin="0,0,0,16"
        />

        <Label
            Content="Пароль пользователя"
        />
        <ui:PasswordBox
            PlaceholderText="Введите пароль"
            Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Margin="0,0,0,24"
        />

        <ui:Button 
            Content="Регистрация"
            Appearance="Primary"
            Command="{Binding RegisterCommand}"
            HorizontalAlignment="Stretch"
            Height="48"
            FontSize="16"
        />
        <Grid
            Margin="0,24,0,0"
            HorizontalAlignment="Center"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="auto"
                />
                <ColumnDefinition
                    Width="25"
                />
                <ColumnDefinition
                    Width="auto"
                />
            </Grid.ColumnDefinitions>

            <ui:HyperlinkButton
                Grid.Column="0"
                Content="Уже есть аккаунт? Войти"
                HorizontalAlignment="Center"
                Command="{Binding NavigateToLoginCommand}"
            />
            <ui:HyperlinkButton 
                Grid.Column="2"
                Content="Настройки"
                HorizontalAlignment="Center"
                Command="{Binding NavigateToSettingsCommand}"
            />
        </Grid>
    </StackPanel>
</Page>
