<UserControl x:Class="admin.Features.Auth.Pages.RegisterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:admin.Features.Auth.Pages"
    >
    <StackPanel Margin="40" MaxWidth="460" VerticalAlignment="Center">
        <TextBlock Text="Регистрация" FontSize="28" FontWeight="SemiBold" Margin="0,0,0,32"/>

        <ui:TextBox PlaceholderText="Имя пользователя"
                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,16"/>

        <ui:TextBox PlaceholderText="Email"
                    Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,16"/>

        <ui:PasswordBox PlaceholderText="Пароль"
                         Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,24"/>

        <ui:Button Content="Регистрация"
                   Appearance="Primary"
                   Command="{Binding RegisterCommand}"
                   HorizontalAlignment="Stretch"
                   Height="48"
                   FontSize="16"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,24,0,0">
            <ui:HyperlinkButton Content="Уже есть аккаунт? Войти"
                        Command="{Binding NavigateToLoginCommand}"/>
            <ui:HyperlinkButton Content="Настройки"
                        Command="{Binding NavigateToSettingsCommand}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
