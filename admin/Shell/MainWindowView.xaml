<ui:FluentWindow
    x:Class="admin.Shell.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:admin.Shell"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tray="http://schemas.lepo.co/wpfui/2022/xaml/tray"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"

    Title="{Binding ViewModel.ApplicationTitle, Mode=OneWay}"
    Width="1280"
    Height="720"
    WindowStartupLocation="CenterScreen"
    
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    mc:Ignorable="d"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ContentControl
            Grid.Row="1"
            Content="{Binding ViewModel.CurrentView}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
        <ui:TitleBar
          Title="{Binding ViewModel.ApplicationTitle, Mode=OneWay}"
          Grid.Row="0"
          Icon="{ui:SymbolIcon Person24}"
        />
        <tray:NotifyIcon
            Grid.Row="0"
            FocusOnLeftClick="True"
            Icon="pack://application:,,,/Resources/application-icon.png"
            MenuOnRightClick="True"
            TooltipText="SpendScope Admin"
        >
            <tray:NotifyIcon.Menu>
                <ContextMenu ItemsSource="{Binding ViewModel.TrayMenuItems, Mode=OneWay}" />
            </tray:NotifyIcon.Menu>
        </tray:NotifyIcon>
    </Grid>
</ui:FluentWindow>