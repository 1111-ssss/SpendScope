<Window 
    x:Class="admin.MVVM.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:admin.MVVM.Views"
    Title="Панель администратора"
    Width="1280"
    Height="720"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Левая панель навигации  -->
        <ui:NavigationView Grid.Column="0">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Content="Home"
                    Icon="{ui:SymbolIcon Home24}"
                    TargetPageType="{x:Type local:DashboardPage}" />
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.ContentOverlay>
                <Frame x:Name="ContentFrame" 
                       NavigationUIVisibility="Hidden"
                       Source="{Binding CurrentPage}"/>
            </ui:NavigationView.ContentOverlay>
        </ui:NavigationView>
        <Button Click="NavigateToDashboard">

        </Button>
    </Grid>
</Window>
